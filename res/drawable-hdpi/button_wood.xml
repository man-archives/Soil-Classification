<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/woodb">
    
     <item android:state_pressed="true" >
         <shape android:shape="rectangle" 
             android:alpha="0.75" >
             <corners android:radius="6dip" />
             <stroke android:width="1dip" android:color="#766e4a" />
             <gradient  android:angle="-90"  android:startColor="#99534121" android:endColor="#999f8a57"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle" 
             android:alpha="0.75" >
             
             <corners android:radius="6dip" />
             <stroke android:width="1dip" android:color="#99766e4a" />
             <solid  android:color="#998a7246"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle" 
            android:alpha="0.75" >
             <corners android:radius="6dip" />
             <stroke android:width="1dip" android:color="#99766e4a" />
             <gradient  android:angle="-90"  android:startColor="#99bfaa75" android:endColor="#998a7246" />            
         </shape>
     </item>
</selector>